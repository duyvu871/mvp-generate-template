<div class="hero">
    <div class="time-display">
        <h2><i class="fas fa-clock"></i> Current Server Time</h2>
        <div class="time-container">
            <div class="time-card">
                <h3>Formatted Time</h3>
                <p class="time-formatted">{{serverTimeFormatted}}</p>
            </div>
            <div class="time-card">
                <h3>ISO Time</h3>
                <p class="time-iso">{{serverTime}}</p>
            </div>
            <div class="time-card">
                <h3>Timestamp</h3>
                <p class="time-timestamp">{{timestamp}}</p>
            </div>
        </div>
        <button id="refresh-time" class="btn btn-primary">
            <i class="fas fa-sync-alt"></i> Refresh Time
        </button>
    </div>
</div>

<div class="features">
    <h2><i class="fas fa-star"></i> Features</h2>
    <div class="feature-grid">
        <div class="feature-card">
            <i class="fas fa-bolt"></i>
            <h3>Express.js</h3>
            <p>Fast and minimalist web framework for Node.js</p>
        </div>
        <div class="feature-card">
            <i class="fas fa-code"></i>
            <h3>Handlebars</h3>
            <p>Semantic templating with powerful features</p>
        </div>
        <div class="feature-card">
            <i class="fas fa-clock"></i>
            <h3>Real-time</h3>
            <p>Live server time display with auto-refresh</p>
        </div>
        <div class="feature-card">
            <i class="fas fa-mobile-alt"></i>
            <h3>Responsive</h3>
            <p>Mobile-friendly and modern design</p>
        </div>
    </div>
</div> 
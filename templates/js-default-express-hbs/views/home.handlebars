<div class="hero-section">
    <h1>{{title}}</h1>
    <p class="hero-message">{{message}}</p>
    
    <div class="build-info">
        <h3>Built With:</h3>
        <ul>
            <li><strong>Language:</strong> {{buildInfo.language}}</li>
            <li><strong>Runtime:</strong> {{buildInfo.buildTool}}</li>
            <li><strong>View Engine:</strong> {{buildInfo.viewEngine}}</li>
        </ul>
    </div>
</div>

<div class="users-preview">
    <h2>Recent Users</h2>
    <div class="users-grid">
        {{#each users}}
        <div class="user-card">
            <h3>{{this.name}}</h3>
            <p>{{this.email}}</p>
            <p class="user-date">Joined: {{formatDate this.createdAt}}</p>
            <a href="/users/{{this.id}}" class="btn">View Profile</a>
        </div>
        {{/each}}
    </div>
    <div class="text-center">
        <a href="/users" class="btn btn-primary">View All Users</a>
    </div>
</div>

